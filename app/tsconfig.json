{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",

    "sourceMap": true,
    "outDir": "./build",

    "strict": true,

    "types": ["jest"],
    "esModuleInterop": true,

    "sourceRoot": "./",

    "inlineSources": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "allowJs": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/cli/utils/.ts"],
  "exclude": ["node_modules", "src/**/*.js"],
}
