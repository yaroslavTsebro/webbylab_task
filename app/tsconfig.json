{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",

    "sourceMap": true,
    "outDir": "./dist",

    "strict": true,

    "esModuleInterop": true,

    "sourceRoot": "./",

    "inlineSources": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@/modules/*": ["src/modules/*"],
      "@/system/*": ["src/system/*"],
      "@/shared/*": ["src/shared/*"],
      "@/types/*": ["src/types/*"],
      "@/config/*": ["src/system/config/*"],
      "@/entities/*": ["src/shared/entities/*"]
    },

    "allowJs": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/cli/utils/.ts"],
  "exclude": ["node_modules", "src/**/*.js"],
}
